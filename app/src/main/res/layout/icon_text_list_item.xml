<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/large_padding_size"
	android:paddingRight="@dimen/middle_padding_size"
	android:paddingTop="@dimen/small_padding_size"
	android:paddingBottom="@dimen/small_padding_size">

	<ImageView
		android:id="@+id/list_item_icon"
		android:layout_height="@dimen/item_icon_size"
		android:layout_width="@dimen/item_icon_size"/>

	<TextView
		android:id="@+id/list_item_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:paddingLeft="@dimen/middle_padding_size"
		android:maxLines="1"
		android:ellipsize="end"/>
</LinearLayout>
